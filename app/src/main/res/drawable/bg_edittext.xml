<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#0090FF" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="5dp"
                android:bottom="5dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#777" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>